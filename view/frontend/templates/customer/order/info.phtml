<?php
/** @var  Ls\Customer\Block\Order\Info $block */
/** @var  Ls\Hospitality\ViewModel\CustomerOrderInfo $viewModel */

$viewModel = $block->getData("view_model");
$escaper   = $block->getEscaper();
if ($viewModel->isHospitalityEnabled() == "1") :
    $ajaxUrl         = $block->getUrl('hospitality/ajax/OrderInfo');
    $order           = $block->getOrder();
    $magOrder        = $block->getMagOrder();
    $statusInfo      = $viewModel->getOrderStatusInfo($magOrder);
    $orderId         = null;
    $pickupOrderTime = '';
    $orderComment    = '';
    $storeId         = '';
    $refreshInterval = $viewModel->getRefreshInterval();

    if (!empty($statusInfo)) {
        $orderId         = $statusInfo['orderId'];
        $storeId         = $statusInfo['storeId'];
        $pickupOrderTime = $statusInfo['pickupDateTimeslot'];
    }
    if (!empty($order) && empty($statusInfo)) {
        $orderId = $order->getId();
        $storeId = $order->getStoreId();
    }
    if (!empty($magOrder)) {
        $pickupOrderTime = $magOrder->getPickupDateTimeslot();
        $orderComment    = $magOrder->getLsOrderComment();
    }
    if ($orderId):
        ?>
        <div class="block block-order-details-view-loyalty ls-kitchen-order-status">
            <div class="block-title">
                <strong><?= $escaper->escapeHtml(__('Kitchen Information')) ?></strong>
            </div>
            <div id="ls-hosp-order-info">
                <div class="loader">
                    <img src="<?= $escaper->escapeUrl($block->getViewFileUrl('images/loader-1.gif')) ?>"
                         alt="<?= $escaper->escapeHtmlAttr(__('Loading...')) ?>">
                    <br/>
                    <div><?= $escaper->escapeHtml(__('Loading Kitchen Info...')) ?></div>
                </div>
            </div>
        </div>
        <script type="text/x-magento-init">
            {
                "*": {
                    "Ls_Hospitality/js/view/customer/order/info": {
                        "ajaxUrl": "<?= $escaper->escapeUrl($ajaxUrl) ?>",
                        "orderId": "<?= $escaper->escapeJs($orderId) ?>",
                        "storeId": "<?= $escaper->escapeJs($storeId) ?>",
                        "pickupOrderTime": "<?= $escaper->escapeJs($pickupOrderTime) ?>",
                        "autoRefreshEnabled": <?= $viewModel->isAutoRefreshEnabled() ? 'true' : 'false' ?>,
                        "refreshInterval": <?= (int)$refreshInterval ?>
            }
        }
    }
        </script>
        <?php if ($orderComment): ?>
        <div class="block block-order-details-view-loyalty">
            <div class="block-title">
                <strong><?= $escaper->escapeHtml(__('Additional Information')) ?></strong>
            </div>
            <div class="block-content">
                <div class="custom-box">
                    <span><?= nl2br($escaper->escapeHtml($orderComment)) ?></span>
                </div>
            </div>
        </div>
    <?php endif; ?>
    <?php endif; ?>
<?php endif; ?>
