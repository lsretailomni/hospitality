<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" src_type="url"/>
    </head>
    <body>
        <referenceBlock name="product.info.options.wrapper" template="Ls_Hospitality::product/view/options/wrapper.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Ls\Hospitality\ViewModel\CustomProduct</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="product.info.options.select" template="Ls_Hospitality::product/view/options/type/select.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Ls\Hospitality\ViewModel\CustomProduct</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="options-modal" as="options-modal" after="footer_links" template="Ls_Hospitality::options/modal.phtml"/>
        </referenceContainer>
    </body>
</page>
