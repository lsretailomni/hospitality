<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Adding Stores page Link to Footer Menu -->
        <referenceBlock name="footer_links">
            <block class="Ls\Hospitality\Block\Order\KitchenStatusLink" name="omni.kitchenstatus" before="-">
                <arguments>
                    <argument name="class" xsi:type="string">ls-footer-kitchen-status</argument>
                    <argument name="label" xsi:type="string" translate="true">Kitchen Status</argument>
                    <argument name="path" xsi:type="string">hospitality/kitchenstatus</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
