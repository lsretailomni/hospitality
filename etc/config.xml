<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <ls_mag>
            <ls_industry>
                <ls_choose_industry>hospitality</ls_choose_industry>
            </ls_industry>
            <replication>
                <item_modifier_batch_size>200</item_modifier_batch_size>
                <item_recipe_batch_size>200</item_recipe_batch_size>
            </replication>
            <ls_order_management>
                <disable_order_create_on_basket_fail>1</disable_order_create_on_basket_fail>
            </ls_order_management>
            <hospitality>
                <service_mode_status>0</service_mode_status>
                <service_mode_options>Dine-in,Takeaway</service_mode_options>
                <order_tracking>1</order_tracking>
                <delivery_salas_type>POS</delivery_salas_type>
                <takeaway_sales_type>POS</takeaway_sales_type>
                <show_in_checkout>1</show_in_checkout>
                <collapse_state>0</collapse_state>
                <max_length>150</max_length>
                <dateandtime_range_validation_active>0</dateandtime_range_validation_active>
                <graphql_dateandtime_range_validation_active>0</graphql_dateandtime_range_validation_active>
                <qr_order_enabled>1</qr_order_enabled>
                <order_display_estimated_delivery_time>0</order_display_estimated_delivery_time>
                <anonymous_order_enabled>1</anonymous_order_enabled>
                <remove_checkout_steps>1</remove_checkout_steps>
                <enable_check_availability>1</enable_check_availability>
                <disable_inventory_checking>1</disable_inventory_checking>
                <persist_qrcode_ordering>0</persist_qrcode_ordering>
                <enable_refresh_kitchen_status_interval>1</enable_refresh_kitchen_status_interval>
                <refresh_kitchen_status_interval>30</refresh_kitchen_status_interval>
            </hospitality>
        </ls_mag>
        <omni_clickandcollect>
            <checkout>
                <items_availability>1</items_availability>
            </checkout>
        </omni_clickandcollect>
    </default>
</config>
