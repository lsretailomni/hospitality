<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="flat_replication">
        <job name="repl_hierarchydeallineview" instance="Ls\Replication\Cron\ReplLscHierarchydeallineviewTask"
             method="execute">
            <schedule>*/3 * * * *</schedule>
        </job>

        <job name="repl_hierarchydealview" instance="Ls\Replication\Cron\ReplLscHierarchydealviewTask"
             method="execute">
            <schedule>*/3 * * * *</schedule>
        </job>

        <job name="repl_lsc_wi_item_recipe_buffer" instance="Ls\Replication\Cron\ReplLscWiItemRecipeBufferTask"
             method="execute">
            <schedule>*/3 * * * *</schedule>
        </job>

        <job name="repl_lsc_wi_item_modifier" instance="Ls\Replication\Cron\ReplLscWiItemModifierTask"
             method="execute">
            <schedule>*/3 * * * *</schedule>
        </job>

        <job name="repl_lsc_offer_html_ml" instance="Ls\Replication\Cron\ReplLscOfferHtmlMlTask"
             method="execute">
            <schedule>*/3 * * * *</schedule>
        </job>
    </group>

    <group id="replication">
        <job name="process_item_modifier" instance="Ls\Hospitality\Cron\ProcessItemModifier" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="process_item_recipe" instance="Ls\Hospitality\Cron\ProcessItemRecipe" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="process_item_deal" instance="Ls\Hospitality\Cron\ProcessItemDeal" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="process_translation" instance="Ls\Hospitality\Cron\ProcessTranslation" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
    </group>
</config>
